<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCE98F"
    android:orientation="vertical"
    tools:context=".Pedidos.Pedidos_Lista_Activity">

    <RelativeLayout
        android:id="@+id/Pedidos_Lista_lt_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#87EB93">

        <TextView
            android:id="@+id/Pedidos_Lista_lbl_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#00FFFFFF"
            android:text="TextView"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/Lista_Pedido_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>